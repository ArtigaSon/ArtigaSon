@model ArtıkArtığaSon.Models.Sınıflar.KisiselBilgiler
@{
    ViewBag.Title = "uyeKayit";
    Layout = "~/Views/Shared/_AASLayout.cshtml";
}

<div class="background" style="background-color:#000000; height:106px;">   </div>

<div class="reservation-form">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="reservation-head text-center">
                    <h2>Üye Olun</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form">
                <div class="col-xs-12 col-sm-12 col-md-10 col-lg-8 col-xl-8 m-auto">
                    <div class="uyeOl">
                        <div class="tab">
                            <ul class="nav nav-pills custom-nav mb-3" id="pills-tab" role="tablist">
                                <li class="nav-item" role="presentation" style="">
                                    <a class="nav-link show active custom-nav-link" id="thestory-tab kullanici" data-toggle="pill" href="#thestory" role="tab" aria-controls="thestory-tab" aria-selected="true">Kullanıcı Kayıt </a>
                                </li>
                            </ul>
                            <div class="tab-content" id="pills-tabContent">
                                <div class="tab-pane custom-tab-pane text-center show active" id="thestory" role="tabpanel" aria-labelledby="thestory-tab">
                                    <div class="form-row custom-form">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mt-5">
                                            <h4>Kişisel Bilgileriniz</h4>
                                        </div>
                                        <form class="form-group" method="post" style="margin-top:100px;">
                                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 mt-3">
                                                @Html.LabelFor(x => x.Isım, "Adınız")
                                                @Html.TextBoxFor(x => x.Isım, new { @class = "form-control reservation-input" })
                                            </div>
                                            @*  *@
                                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 mt-3">
                                                @Html.LabelFor(x => x.SoyIsım, "Soyadınız")
                                                @Html.TextBoxFor(x => x.SoyIsım, new { @class = "form-control reservation-input" })
                                            </div>
                                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 mt-3">
                                                @Html.LabelFor(x => x.Kimlik, "TC Kimlik Numaranız")
                                                @Html.TextBoxFor(x => x.Kimlik, new { @class = "form-control reservation-input" })
                                            </div>
                                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 mt-3">
                                                @Html.LabelFor(x => x.Telefon, "Telefon Numaranız")
                                                @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control reservation-input" })
                                            </div>
                                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 mt-3">
                                                @Html.LabelFor(x => x.Mail, "Mail Adresiniz")
                                                @Html.TextBoxFor(x => x.Mail, new { @class = "form-control reservation-input" })

                                            </div>
                                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 mt-3">
                                                @Html.LabelFor(x => x.Sifre, "Şifreniz")
                                                @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control reservation-input" })
                                            </div>
                                            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 mt-3">
                                                @Html.LabelFor(x => x.Cinsiyet, "Cinsiyetiniz")
                                                @Html.TextBoxFor(x => x.Cinsiyet, new { @class = "form-control reservation-input" })
                                            </div>
                                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mt-3">
                                                @Html.LabelFor(x => x.KisAdres, "Adresiniz")
                                                @Html.TextAreaFor(x => x.KisAdres, new { @class = "form-control reservation-input" })
                                            </div>
                                            <div class="col-12 text-center mt-5">
                                                <button>Kayıt Ol</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<form class="form-group" method="post" style="margin-top:100px;">

    @Html.LabelFor(x => x.Isım)
    @Html.TextBoxFor(x => x.Isım)
    <br />
    @Html.LabelFor(x => x.SoyIsım)
    @Html.TextBoxFor(x => x.SoyIsım, new { @class = "form-control reservation-input" })
    <br />
    @Html.LabelFor(x => x.Kimlik)
    @Html.TextBoxFor(x => x.Kimlik, new { @class = "form-control reservation-input" })
    <br />
    @Html.LabelFor(x => x.Telefon)
    @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control reservation-input" })
    <br />
    <br />
    @Html.LabelFor(x => x.Mail)
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control reservation-input" })
    <br />
    @Html.LabelFor(x => x.Sifre)
    @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control reservation-input" })
    <br />
    @Html.LabelFor(x => x.KisAdres)
    @Html.TextAreaFor(x => x.KisAdres, new { @class = "form-control reservation-input" })
    <br />

    <br />
    <button class="btn btn-primary">Kayıt Ekle</button>

</form>

